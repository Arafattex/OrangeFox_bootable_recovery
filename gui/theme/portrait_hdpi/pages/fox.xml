<?xml version="1.0"?>
<recovery>
	<pages>
		<page name="fox_ota">
			<template name="body"/>

			<template name="ab_without_shadow"/>

			<template name="statusbarinfo"/>

			<image>
				<condition var1="flat_tbar" op="!=" var2="1"/>
				<image resource="actionbar_shadow"/>
				<placement x="0" y="%row2_2_y%"/>
			</image>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>MIUI OTA</text>
			</text>

			<image>
				<condition var1="fox_support_miui_ota" var2="1"/>
				<placement x="0" y="180"/>
				<image resource="ota_poster"/>
			</image>

			<image>
				<condition var1="fox_support_miui_ota" op="!=" var2="1"/>
				<placement x="0" y="180"/>
				<image resource="ota_error"/>
			</image>

			<!-- Check MIUI Bak file -->
			<action>
				<action function="set">tw_simulate_actions=0</action>
				<action function="set">tw_simulate_fail=0</action>
				<action function="mount">data</action>
				<action function="fileexists">/sdcard/Fox/OTA/boot.emmc.win</action>
			</action>

			<action>
				<conditions>
					<condition var1="tw_operation_state" var2="1"/>
					<condition var1="tw_operation_status" var2="0"/>
				</conditions>
				<action function="set">ota_back_file=1</action>
			</action>

			<action>
				<conditions>
					<condition var1="tw_operation_state" var2="1"/>
					<condition var1="tw_operation_status" var2="1"/>
				</conditions>
				<action function="set">ota_back_file=0</action>
			</action>
			<!-- -->

			<image>
				<condition var1="ota_back_file" var2="0"/>
				<condition var1="fox_support_miui_ota" var2="1"/>
				<placement x="%col1_x%" y="%row2_3_y%"/>
				<image resource="icon_warning"/>
			</image>
			
			<image>
				<condition var1="ota_back_file" var2="1"/>
				<condition var1="fox_support_miui_ota" var2="1"/>
				<placement x="%col1_x%" y="%row2_3_y%"/>
				<image resource="icon_info"/>
			</image>
			
			<image>
				<condition var1="fox_support_miui_ota" var2="0"/>
				<placement x="%col1_x%" y="%row2_3_y%"/>
				<image resource="icon_info"/>
			</image>

			<text style="text_body2_fail">
				<condition var1="ota_back_file" var2="0"/>
				<condition var1="fox_support_miui_ota" var2="1"/>
				<placement x="%col1_x_indent%" y="%row2_3_y%"/>
				<text>Please flash full MIUI ROM!</text>
			</text>

			<text style="text_body2_hl">
				<condition var1="ota_back_file" var2="1"/>
				<condition var1="fox_support_miui_ota" var2="1"/>
				<placement x="%col1_x_indent%" y="%row2_3_y%"/>
				<text>You are ready to receive updates!</text>
			</text>

			<text style="text_body2_hl">
				<condition var1="fox_support_miui_ota" var2="0"/>
				<placement x="%col1_x_indent%" y="%row2_3_y%"/>
				<text>Enabled custom ROM mode</text>
			</text>

			<text style="caption">
				<placement x="%col1_x%" y="%row3_2_y%"/>
				<text>{@fox_ota_settings}</text>
			</text>

			<listbox style="settingslist">
				<placement x="0" y="%row3_3_y%" w="%screen_w%" h="%row4_1_y%"/>
				<listitem name="{@fox_support_miui_ota_chk}">
					<data variable="fox_support_miui_ota"/>
				</listitem>	
				<listitem name="{@fox_include_system_survival_chk}">
					<data variable="fox_include_system_survival"/>
				</listitem>
				<listitem name="{@fox_verify_incremental_ota_signature_chk}">
					<data variable="fox_verify_incremental_ota_signature"/>
				</listitem>
				<listitem name="{@fox_advanced_stock_recovery}">
					<data variable="fox_reboot_advanced_stock_recovery_check"/>
				</listitem>
				<listitem name="{@fox_dmverity_chk}">
					<data variable="fox_reboot_dm_verity_check"/>
				</listitem>
				<listitem name="{@fox_forced_encryption_chk}">
					<data variable="fox_reboot_forced_encryption_check"/>
				</listitem>
				<listitem name="{@FOX_DISABLE_OTA_AUTO_REBOOT_chk}">
					<data variable="fox_disable_ota_auto_reboot_check"/>
				</listitem>
			</listbox>

			<button style="btn_raised">
				<placement x="%btn_raised_left_x%" y="%row8_2_y%"/>
				<text>{@fox_ota_off}</text>
				<actions>
					<action function="set">fox_support_miui_ota=0</action>
					<action function="set">fox_include_system_survival=0</action>
					<action function="set">fox_verify_incremental_ota_signature=0</action>
					<action function="set">fox_reboot_advanced_stock_recovery_check=0</action>
					<action function="set">fox_reboot_forced_encryption_check=0</action>
					<action function="set">fox_disable_ota_auto_reboot_check=0</action>
				</actions>
			</button>

			<button style="btn_raised_hl">
				<placement x="%btn_raised_right_x%" y="%row8_2_y%" placement="1"/>
				<text>{@fox_ota_on}</text>
				<actions>
					<action function="set">fox_support_miui_ota=1</action>
					<action function="set">fox_include_system_survival=1</action>
					<action function="set">fox_verify_incremental_ota_signature=1</action>
					<action function="set">fox_reboot_advanced_stock_recovery_check=1</action>
					<action function="set">fox_reboot_dm_verity_check=1</action>
					<action function="set">fox_reboot_forced_encryption_check=1</action>
					<action function="set">fox_disable_ota_auto_reboot_check=1</action>
				</actions>
			</button>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">settings</action>
			</action>
		</page>
	</pages>
</recovery>