			</action>
		
			<template name="body_key"/>

			<template name="ab_main"/>

			<template name="statusbarinfo"/>

			<text style="text_ab_title">
				<placement x="%col1_x%" y="%ab_bc_y%"/>
				<text>{@enter_password_cptn}</text>
			</text>

			<button>
				<condition var1="tw_reboot_poweroff" var2="1"/>
