<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1080" height="1920"/>
		<author>OrangeFox dev team</author>
		<title>OrangeFox</title>
		<description>splash author - KMP design</description>
		<themeversion>3</themeversion>
	</details>
	
	<resources>
		<font name="splashtext1" filename="RobotoCondensed-Regular.ttf" size="50"/>
		<image name="splash" filename="splash"/>
	</resources>
	
	<variables>
		<variable name="background" value="#222222FF"/>
		<variable name="text" value="#000000"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background%"/>		
			
			<text color="%text%">
				<font resource="splashtext1"/>
				<placement x="130" y="1590"/>
				<text>%fox_actual_build%</text>
			</text>	
			
			<object type="image">
				<image resource="splash"/>
				<placement x="0" y="0"/>
			</object>

		</page>
	</pages>
</recovery>
